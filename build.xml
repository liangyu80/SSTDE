<!-- ==================================================================================

	Project : uSeekM2.0
	Description : Build file for uSeekM2.0
	
	Output is two archived sets one with uSeekM2.0 and no dependencies (UseekM2.0.jar, this
	is for drop-in replace of uSeekM2.0.jar in 
	1) IACAT-migration-tool
	2) webapp/openrdf-sesame/WEB-INF/lib/
	
	and the other with the dependencies included. This will be used to change sesame repository type:
	1) 
	sudo java -cp "*:*" com.useekm.indexing.sail.SailTypeModifier /datafs1/openrdf/openrdf-sesame/ IACAT
	
	Remember the class path has all the dependcies.
==========================================================================================-->
<project name="useekm2" default="dist" basedir=".">
	<description>
        Build file for DSAPI2
    </description>
	<!-- set global properties for this build -->
	<property name="src" location="src/main/java" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
	<property name="lib" location="lib" />
	<property name="meta" location="META-INF" />
	
	<path id="build.classpath">
		<fileset dir="${lib}" includes="*.jar" />
	</path>

	<target name="clean">
		<!-- Perform clean-up before building -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<target name="init" depends="clean">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile and the dist directory -->
		<mkdir dir="${build}" />
		<mkdir dir="${dist}" />

	</target>

	<target name="compile" depends="init" description="Compile the Source">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}">
			<classpath refid="build.classpath" />
		</javac>
		<mkdir dir="${build}/META-INF" />
		<copy todir="${build}/META-INF">
			<fileset dir="${meta}"></fileset>
		</copy>
	</target>

	<target name="dist" depends="compile" description="Generate the distribution">
		<!-- Create the distribution directory and then create the zip and perform cleanup-->

		<mkdir dir="${dist}/lib" />
		<copy todir="${dist}">
			<fileset dir="${src}" includes="*.xml" />
		</copy>

		<jar jarfile="${dist}/lib/useekm2.jar" basedir="${build}">
			
		</jar>
		<tstamp />
		<zip destfile="${basedir}/useekm2-nodependencies.zip" basedir="${dist}" />

		<copy todir="${dist}/lib" flatten="true">
			<fileset dir="${lib}" includes="*.jar" />
		</copy>
		<tstamp />
		<zip destfile="${basedir}/useekm2-withdependencies.zip" basedir="${dist}" />

		<delete dir="${build}" />
		<delete dir="${dist}" />

	</target>


</project>

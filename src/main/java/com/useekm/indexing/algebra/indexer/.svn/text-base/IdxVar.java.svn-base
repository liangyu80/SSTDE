package com.useekm.indexing.algebra.indexer;

/**
 * Name of a variable/column in the internal result set of an {@link IdxQuery}
 */
public class IdxVar extends AbstractIdxExpr {
    private final String name;

    public IdxVar(String name) {
        this.name = name;
    }

    public String getName() {
        return name;
    }

    @Override
    public String toString() {
        return name;
    }

    @Override
    public String getSignature() {
        return super.getSignature() + " " + name;
    }
}
